<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppSencillaMAUI.Vistas.PgMensaje"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Mensaje"
    BackgroundColor="Transparent"
    Shell.NavBarIsVisible="False"
    Shell.PresentationMode="ModalAnimated">

    <Frame VerticalOptions="End">
        <Grid RowDefinitions="*,auto" RowSpacing="16">
            <VerticalStackLayout Grid.Row="0" Spacing="16">
                <Label
                    FontAttributes="Bold"
                    FontSize="Subtitle"
                    Text="Mensaje" />
                <Line BackgroundColor="Black" />
                <Label FontSize="Subtitle" Text="Este es el cuerpo del mensaje." />
            </VerticalStackLayout>
            <Button
                Grid.Row="1"
                Clicked="Button_Clicked"
                Text="Cerrar" />
        </Grid>
    </Frame>

</ContentPage>